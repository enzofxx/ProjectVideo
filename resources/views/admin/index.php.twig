{% extends "template.php.twig" %}

{% block content %}

    <!-- Top Navigation -->
    <nav class="navbar navbar-light bg-light p-3">
        <h1 class="h4 ml-4">Administratoriaus Skydelis</h1>
        <a href="{{ route('home') }}" class="font-weight-bold text-secondary text-decoration-none ml-auto">
            <p class="col-xs-1 col-md-1 text-center">
                <i class="fas fa-sign-out-alt h2 float-right"></i>
            </p>
        </a>
    </nav>


    <div class="container-fluid pt-3">

        <div class="row">
            <!-- Side navigation  -->
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
            {{ include('components/adminSideBarNav.html.twig') }}
            </div>

            <!-- Content -->

            <div class="col">
                <div class="row">
                    {% for course in courses %}
                        <div class="col-12 col-md-6 col-lg-4 justify-content-center text-center">
                            <figure class="figure">
                                <figcaption class="figure-caption">
                                    <a href="{{ route('admin.showCourse', {'courseId':course.id}) }}">
                                        <img src="{{ course.picture }}" class="figure-img img-fluid img-thumbnail"
                                             alt="Figure image">
                                    </a>
                                    <h6>{{ course.name }} <small>({{ course.createdOn }} )</small></h6>
                                    <p>{{ course.name }}</p>
                                    <p class="h4">
                                        {{ course.price }} <i class="fas fa-euro-sign"></i>
                                    </p>
                                </figcaption>
                            </figure>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
