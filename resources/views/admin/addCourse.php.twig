{% extends "templateAdmin.php.twig" %}

{% block content %}


    <form class="col-md-6 d-flex bg-light border border-dark needs-validation" method="post" action="{{ route('admin.storeCourse') }}"
          enctype="multipart/form-data" novalidate>
        {{ method('PUT') }}
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="courseName">Kurso pavadinimas:</label>
                    <input type="text" class="form-control" id="courseName" aria-describedby="emailHelp" name="name"
                           required>
                    <div class="invalid-feedback">
                        Prašome įvesti kurso pavadinimą.
                    </div>
                </div>
                <div class="form-group">
                    <label for="aboutCourse">Aprašymas:</label>
                    <input type="text" class="form-control" id="aboutCourse" name="about" required>
                    <div class="invalid-feedback">
                        Prašome įvesti kurso aprašymą.
                    </div>
                </div>
                <div class="form-group">
                    <label for="coursePicture">Cover paveiksliukas:</label>
                    <input type="file" class="form-control-file" id="coursePicture" name="picture" accept="image/*" required>
                    <div class="invalid-feedback">
                        Prašome pasirinkti kurso paveiksliuką.
                    </div>
                    <div id="picErr">
                        Pasirinktas neteisingas failo formatas
                    </div>
                </div>
                <img id="pic" class="border">
                <div class="row">
                    <div class="col">
                        <label for="coursePrice">Kaina:</label>
                        <input type="number" class="form-control" placeholder="" name="price" required>
                        <div class="invalid-feedback">
                            Prašome įvesti kurso kainą.
                        </div>
                    </div>
                    <div class="col">
                        <label for="dicountPrice">Kaina su nuolaida</label>
                        <input type="number" class="form-control" placeholder="" name="dicountPrice" disabled>
                    </div>
                    <div class="col">
                        <label for="validTo">Nuolaida galioja iki:</label>
                        <input type="date" class="form-control" placeholder="" name="validTo" disabled>
                    </div>
                </div>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" name="showCourse" id="customSwitch1">
                    <label class="custom-control-label" for="customSwitch1">Rodyti pagrindiniame puslapyje</label>
                </div>
                <div class="form-group my-2">
                    <button type="reset" class="btn btn-primary" id="clearForm">Išvalyti formą</button>
                    <button type="submit" class="btn btn-primary">Išsaugoti</button>
                </div>
            </div>
            <div class="col-4 bg-gradient-light">
                <div class="col-4 bg-gradient-light">
                    Cia YouTube playlist`ai
                </div>
            </div>
        </div>
    </form>


{% endblock %}

