{% extends "templateAdmin.php.twig" %}

{% block content %}

    <div class=" col-md-7 d-flex bg-light border border-dark">
        <form class="" method="post" action="{{ route('admin.storeCourse') }}" enctype="multipart/form-data">
            {{ method('PUT') }}
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="courseName">Kurso pavadinimas:</label>
                        <input type="text" class="form-control" id="courseName" aria-describedby="emailHelp"
                               name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="aboutCourse">Aprašymas:</label>
                        <input type="text" class="form-control" id="aboutCourse" name="about" required>
                    </div>
                    <div class="form-group">
                        <label for="coursePicture">Cover paveiklsiukas:</label>
                        <input type="file" class="form-control-file" id="coursePicture" name="picture" required>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="coursePrice">Kaina:</label>
                            <input type="number" class="form-control" placeholder="" name="price" required>
                        </div>
                        <div class="col">
                            <label for="dicountPrice">Kaina su nuolaida</label>
                            <input type="number" class="form-control" placeholder="" name="dicountPrice">
                        </div>
                        <div class="col">
                            <label for="validTo">Nuolaida galioja iki:</label>
                            <input type="date" class="form-control" placeholder="" name="validTo">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck" value="published"
                                   name="status">
                            <label class="form-check-label" for="gridCheck">
                                Rodyti pagrindiniame puslapyje
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="reset" class="btn btn-primary">Ištrinti</button>
                        <button type="submit" class="btn btn-primary">Išsaugoti</button>
                    </div>
                </div>
                <div class="col-4 bg-gradient-light">
                    {% for lecture in lectures %}
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck"
                                       value="{{ lecture.id }}" name="lectureLoop{{ loop.index }}">
                                <label class="form-check-label" for="gridCheck">
                                    <div class="thumbnail text-center border pt-2 shadow">
                                        {#                                        <div class="embed-responsive embed-responsive-16by9 border">#}
                                        <iframe class="embed-responsive-item" src="{{ lecture.videoURL }}"
                                                allowfullscreen></iframe>
                                        {#                                        </div>#}
                                    </div>
                                </label>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </form>
    </div>

{% endblock %}

